!!! Code:


Xft.dpi:    96

!! general setting
Rxvt.geometry:      80x24
Rxvt.visualBell:    False
Rxvt.termName:      rxvt

!! color theme
!! dark theme
Rxvt.background:    black
Rxvt.foreground:    white
Rxvt.colorBD:       yellow
Rxvt.colorIT:       magenta
Rxvt.colorUL:       green
Rxvt.underlineColor:cyan
Rxvt.tintColor:     gray
Rxvt.cursorColor:   white
Rxvt.shading:       100

!! title
Rxvt.title:                 rxvt-unicode
!! scrollBar
Rxvt.scrollBar:             False
Rxvt.scrollstyle:           next
Rxvt.scrollBar_right:       True
Rxvt.scrollBar_floating:    True
Rxvt.scrollTtyOutput:       True
Rxvt.scrollTtyKeypress:     True

!! cursor
Rxvt.cursorBlink:           True
Rxvt.pointerBlank:          True
Rxvt.externalBorder:        True

!! coding
Rxvt.multichar_encoding:    utf-8
Rxvt.imLocale:              zh_CN.UTF-8

Rxvt.menu:              /etc/X11/rxvt.menu
!! set the artificial transparency
!! Rxvt.inheritPixmap:        True
Rxvt.transparency:      255

Rxvt.saveLines:             1000
Rxvt.preeditType:           Root
Rxvt.borderLess:            False

!! turn on URL browsing support
!! please refer to: http://www.leninlee.cn/?p=384
URxvt.urlLauncher:          firefox
URxvt.matcher.button:       1
URxvt.perl-ext-common:      matcher

!! multi-tab
!! URxvt.perl-ext-common: default,tabbed

!! font
!!Rxvt.font:              xft:Vera Sans YuanTi Mono:size=12:antialias=true
!!Rxvt.boldFont:          xft:Vera Sans YuanTi Mono:size=12:Bold:antialias=true
!!Rxvt.italicFont:        xft:Vera Sans YuanTi Mono:size=12:Italic:antialias=true
!!Rxvt.boldItalicFont:    xft:Vera Sans YuanTi Mono:size=12:Bold Italic:antialias=true

!!Rxvt.font:              xft:微软雅黑Monaco:size=14:antialias=true
!!Rxvt.boldFont:          xft:微软雅黑Monaco:size=14:Bold:antialias=true
!!Rxvt.italicFont:        xft:微软雅黑Monaco:size=14:Italic:antialias=true
!!Rxvt.boldItalicFont:    xft:微软雅黑Monaco:size=14:Bold Italic:antialias=true

Rxvt.font:              xft:Ubuntu Mono:size=13:antialias=true
Rxvt.boldFont:          xft:Ubuntu Mono:size=13:Bold:antialias=true
Rxvt.italicFont:        xft:Ubuntu Mono:size=13:Italic:antialias=true
Rxvt.boldItalicFont:    xft:Ubuntu Mono:size=13:Bold Italic:antialias=true


